<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_dashboard"
    tools:context=".SettingActivity">

    <RelativeLayout
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_to_previous_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_chevron_left_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="@string/settings_tittle"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_basic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="30sp"
                android:background="@drawable/button_setting"
                android:text="Themes" />

            <Button
                android:id="@+id/button_preferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_theme"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="30sp"
                android:background="@drawable/button_setting"
                android:text="Preferences" />

            <Button
                android:id="@+id/button_security_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_preferences"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="30sp"
                android:background="@drawable/button_setting"
                android:text="Security &amp; Data" />

            <Button
                android:id="@+id/button_advance_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_security_data"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="30sp"
                android:background="@drawable/button_setting"
                android:text="Advance Setting" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_follow_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView_basic"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30sp"
        android:background="@drawable/button_setting"
        android:text="Follow Us" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_follow_us"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_tutorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="30sp"
                android:background="@drawable/button_setting"
                android:text="Tutorial" />

            <Button
                android:id="@+id/button_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_tutorial"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="30sp"
                android:background="@drawable/button_setting"
                android:text="Help" />

            <Button
                android:id="@+id/button_feedback_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_help"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="30sp"
                android:background="@drawable/button_setting"
                android:text="Feedback &amp; Suggestion" />

            <Button
                android:id="@+id/button_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_feedback_suggestion"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="30sp"
                android:background="@drawable/button_setting"
                android:text="About" />

            <Button
                android:id="@+id/button_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_about"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="30sp"
                android:background="@drawable/button_setting"
                android:text="Contact Us" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>